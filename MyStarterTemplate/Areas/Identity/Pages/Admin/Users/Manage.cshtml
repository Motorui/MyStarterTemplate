@page
@model ManageModel
@{
    ViewData["Title"] = "Manage";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
            Add/Remove Roles for User / @Model.CurrentUser.UserName.
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="@Model.CurrentUser.Id" />
            @for (int i = 0; i < Model.UserRoles.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.UserRoles[i].RoleId" />
                    <input type="hidden" asp-for="@Model.UserRoles[i].RoleName" />
                    <input asp-for="@Model.UserRoles[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.UserRoles[i].Selected">
                        @Model.UserRoles[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a asp-page="./Index" class="btn btn-primary">Cancel</a>

        </div>
    </div>
</form>